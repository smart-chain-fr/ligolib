// Return str repeated n times
let repeat = ([str, n] : [string, nat]) : string => {
    let loop = ([n, acc]: [nat, string]) : string => {
        if (n == (0 as nat)) {
            return acc;
        } else {
            return loop (abs(n - (1 as nat)), acc + str)
        }
    };
    loop(n, "")
};
 
